 <div class="flash">
         <%= flash[:notice] %>
  </div>


<% if flash[:user_update_notice] %>
    <div class="flash">
         <%= flash[:user_update_notice] %>
    </div>
<% end %>



    <div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'layouts/list', book: @book, user: @user %>
    </div>

      <div class="col-md-8 offset-md-1">
        <h2>Books</h2>
      <table>
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
      <tbody>


      <% @books.each do |book| %>

        <tr>
          <td>
            <%= link_to user_path(book.user) do %>
              <%= attachment_image_tag book.user, :profile_image, size: "50x50", fallback: "img_7c62aaccd6714ba4a1fedfaf0d5702c3142297.jpg" %>
            <% end %>
          </td>
          <td><%= link_to book.title, book_path(book.id) %></td>
          <td><%= book.body %></td>

        </tr>

    <% end %>
    </tbody>
    </table>
    </div>



  </div>
</div>